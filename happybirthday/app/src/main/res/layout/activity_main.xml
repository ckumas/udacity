<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.happybirthday.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:src="@drawable/vintage_swirly_texture_512"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster"
        android:layout_above="@id/middle"
        android:text="@string/sTop"
        android:textAlignment="center"
        android:textColor="@color/myBrown"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sMiddle"
        android:textSize="48sp"
        android:textAlignment="center"
        android:textColor="@color/myBrown"
        android:layout_centerInParent="true"
        android:fontFamily="@font/lobster"
        android:padding="20dp"
        />

    <ImageView
        android:id="@+id/bottom"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingLeft="24dp"
        android:paddingStart="24dp"
        android:color="@color/myBrown"
        app:srcCompat="@drawable/ic_udacity_4e342e_svg"
        android:layout_below="@id/middle"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
